<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- layout background -->
    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:startColor="#FFFFFF"
                android:centerColor="#8ad8f5"
                android:endColor="#FFFFFF"/>
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:bottom="25px"
        android:top="25px">
        <!-- show rectangle area -->
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <corners

                android:topLeftRadius="24px"
                android:topRightRadius="24px"
                android:bottomRightRadius="24px"
                android:bottomLeftRadius="24px"
                />
        </shape>
    </item>
</layer-list>