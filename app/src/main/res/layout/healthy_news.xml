<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/home_card_bottom"
    android:layout_height="150dp">



    <ImageView
        android:id="@+id/news_img"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/home_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/news_img"
        android:layout_toEndOf="@+id/news_img"
        android:layout_marginStart="15dp"
        android:id="@+id/relativeLayout">
        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="孩子发烧，这三种物理降温才有效"
            android:textColor="@color/news_title"
            android:textSize="12dp"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/author_name"
            android:layout_below="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_pressed"
            android:text="作者：海棠"
            android:layout_marginTop="7dp"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/news_content"
            android:layout_below="@+id/author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:singleLine="false"
            android:ellipsize="none"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:text="天一冷，感冒发烧的宝宝又增多了，本文盘点了几种常见的物理降温方法"
            android:textSize="10dp"
            android:textColor="@color/news_content"
            android:lineSpacingMultiplier = "1.5"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:src="@mipmap/home_collect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>