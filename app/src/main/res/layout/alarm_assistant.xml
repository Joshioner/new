<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9f1f3"
    android:orientation="vertical">

    //标题栏

    <RelativeLayout
        android:id="@+id/alarm_assistant_relative"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@drawable/background_gradient">

        <ImageView
            android:id="@+id/alarm_back"
            android:layout_width="20px"
            android:layout_height="35px"
            android:layout_marginLeft="35px"
            android:layout_marginTop="65px"
            android:background="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65px"
            android:text="@string/alarm_assistant"
            android:textColor="#ffffff"
            android:textSize="36px" />

        //添加闹钟

        <ImageView
            android:id="@+id/add_alarm"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:background="@mipmap/cardhistory_icon_add" />
    </RelativeLayout>
    //展示栏

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188px"
        android:layout_marginTop="40px"
        android:background="@drawable/shape_corner"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="81px"
            android:layout_height="88px"
            android:layout_marginLeft="70px"
            android:background="@mipmap/tool_icon_remind" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88px"
            android:layout_marginLeft="201px"
            android:orientation="vertical">
            <!--<TextView-->
            <!--android:id="@+id/textView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="44px"-->
            <!--android:textSize="30px"-->
            <!--android:textColor="#333333"-->
            <!--android:text="@string/alarm_tag1" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/alarm_tag2"
                android:textColor="#333333"
                android:textSize="50px" />
        </LinearLayout>
    </RelativeLayout>
    //闹钟列表

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">

        <ListView
            android:id="@+id/alarm_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="20dp"></ListView>
    </LinearLayout>


    <!--<ImageView-->
    <!--android:id="@+id/add_alarm"-->
    <!--android:layout_width="80px"-->
    <!--android:layout_height="80px"-->
    <!--android:background="@mipmap/tool_clock_icon_add"/>-->
</LinearLayout>