<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="@color/bg_white">
    <ImageView
        android:layout_width="33px"
        android:layout_height="42px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="46px"
        android:background="@mipmap/icon_auscultation"/>
    <TextView
        android:id="@+id/auscultation_message"
        android:layout_width="300px"
        android:layout_height="30px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100px"
        android:textSize="26px"
        android:textColor="#333333"
        android:text="message"/>
    <TextView
        android:id="@+id/auscultation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="26px"
        android:textColor="#333333"
        android:text="2012-02-03"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100px"/>
    <TextView
        android:id="@+id/auscultation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="26px"
        android:textColor="#333333"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:text="13:58"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#e9f1f3"
        android:layout_alignParentBottom="true"

        >

    </LinearLayout>
</RelativeLayout>