<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180px"
    android:background="@color/bg_white">
    <ImageView
        android:layout_width="33px"
        android:layout_height="42px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="46px"
        android:background="@mipmap/icon_auscultation"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="200px"
        android:layout_height="35px"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100px"
        android:textSize="26px"
        android:textColor="#333333"
        android:text="messagemessagemessagemessagemessagemessagemessagemessagemessage"/>
    <TextView
        android:id="@+id/operTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="26px"
        android:textColor="#333333"
        android:textStyle="bold"
        android:text="2012-02-03"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="#e9f1f3"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>
</RelativeLayout>