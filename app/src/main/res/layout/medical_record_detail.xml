<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@mipmap/cardhistory_card"
    >

    <LinearLayout
        android:id="@+id/linearLayout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="3dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@mipmap/cardhistory_icon_time" />

        <TextView
            android:id="@+id/times"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:text="2017-11-12 18:25:05" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_02"
        android:layout_below="@id/linearLayout_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/cardhistory_icon_address" />

        <TextView
            android:id="@+id/hospital_name"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:text="深圳市第二人民医院" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_03"
        android:layout_below="@id/linearLayout_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/department"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12dp"
            android:text="急诊科" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout_04"
        android:layout_below="@id/linearLayout_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:src="@mipmap/cardhistory_zhaoliang" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:src="@mipmap/cardhistory_xilengshuizao" />
    </LinearLayout>
    <ImageView
        android:id="@+id/medical_record_enter"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:src="@mipmap/cardhistory_icon_enter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</RelativeLayout>