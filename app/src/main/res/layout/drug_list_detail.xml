<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/shape_corner"
    >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/pharmacy_logo_small"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:src="@mipmap/pharmacy_logo_small"
            />
        <View
            android:layout_below="@+id/pharmacy_logo_small"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/general_background"
            />


        <TextView
            android:id="@+id/pharmacyName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="奉生大药店"
            android:layout_marginLeft="19dp"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/pharmacy_logo_small"
            android:layout_toEndOf="@+id/pharmacy_logo_small"
            android:layout_marginStart="19dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative_1"
        android:layout_below="@id/relative"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/drug_logo"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@mipmap/drug_logo"
            android:gravity="center|left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_toRightOf="@+id/relative_1"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout android:id="@+id/linearLayout_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/drug_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 三九胃泰颗粒20X6袋"
                android:textColor="@color/black"
                android:textSize="15dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout_02"
            android:layout_below="@+id/linearLayout_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/drug_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清热燥湿，行气活血，柔肝止痛"
                android:textColor="@color/text_gray"
                android:textSize="12dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/price_int"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥16."
                android:textColor="@color/text_pressed"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/price_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/text_pressed"
                android:textSize="13dp"
                />
            <TextView
                android:id="@+id/payNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21人付款"
                android:textColor="@color/text_gray"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>